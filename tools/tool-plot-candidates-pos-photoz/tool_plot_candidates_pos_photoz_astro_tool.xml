<tool id="tool_plot_candidates_pos_photoz_astro_tool" name="tool-plot-candidates-pos-photoz" version="0.0.1+galaxy0" profile="24.0">
  <requirements>
    <requirement type="package" version="6.1.4">astropy</requirement>
    <requirement type="package" version="3.10.1">matplotlib</requirement>
    <requirement type="package" version="7.16.6">nbconvert</requirement>
    <requirement type="package" version="1.2.33">oda-api</requirement>
    <!--Requirements string 'nb2workflow>=1.3.30' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/scatter_plot_candidates_pos_photoz.py'</command>
  <environment_variables>
    <environment_variable name="BASEDIR">$__tool_directory__</environment_variable>
    <environment_variable name="GALAXY_TOOL_DIR">$__tool_directory__</environment_variable>
  </environment_variables>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <param name="name" type="text" value="GRB 250129A" label="name" optional="false" />
    <param name="RA" type="float" value="198.67654" label="RA (unit: deg)" optional="false" />
    <param name="DEC" type="float" value="5.03019" label="DEC (unit: deg)" optional="false" />
    <param name="desi_URL" type="data" label="desi_URL" format="data" optional="false" />
    <param name="photoz_URL" type="data" label="photoz_URL" format="data" optional="false" />
    <param name="uncertainty" type="float" value="1.9" label="Uncertainty" optional="false" />
    <param name="s_real_z" type="float" value="2.15" label="Real Redshift" optional="false" />
    <param name="Radius" type="float" value="1" label="Radius (unit: arcmin)" optional="false" />
    <param name="pixsize" type="float" value="1.0" label="Pixel size (unit: arcsec)" optional="false" />
    <param name="data_release" type="integer" value="10" label="Data Release" optional="false" />
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; scatter_plot_candidates_pos_photoz spectrum_png" name="out_scatter_plot_candidates_pos_photoz_spectrum_png" format="auto" from_work_dir="spectrum_png_galaxy.output" />
    <data label="${tool.name} -&gt; scatter_plot_candidates_pos_photoz catalog_table" name="out_scatter_plot_candidates_pos_photoz_catalog_table" format="auto" from_work_dir="catalog_table_galaxy.output" />
  </outputs>
  <tests>
    <test expect_num_outputs="2">
      <param name="name" value="GRB 250129A" />
      <param name="RA" value="198.67654" />
      <param name="DEC" value="5.03019" />
      <param name="desi_URL" location="https://www.astro.unige.ch/~tucci/Phosphoros/MultiBands_Catalog_1k.fits" />
      <param name="photoz_URL" location="https://www.astro.unige.ch/~tucci/Phosphoros/MultiBands_Catalog_1k.fits" />
      <param name="uncertainty" value="1.9" />
      <param name="s_real_z" value="2.15" />
      <param name="Radius" value="1" />
      <param name="pixsize" value="1.0" />
      <param name="data_release" value="10" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
  <help>
</help>
</tool>