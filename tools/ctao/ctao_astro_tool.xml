<tool id="ctao_astro_tool" name="CTAO" version="0.0.1+galaxy0" profile="23.0">
  <requirements>
    <requirement type="package" version="1.1">gammapy</requirement>
    <requirement type="package" version="1.11.4">scipy</requirement>
    <requirement type="package" version="5.3.4">astropy</requirement>
    <requirement type="package" version="0.12.0">pyirf</requirement>
    <requirement type="package" version="1.2.37">oda-api</requirement>
    <requirement type="package" version="7.16.6">nbconvert</requirement>
    <requirement type="package" version="3.9.4">matplotlib</requirement>
    <!--Requirements string 'ctadata 
' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
    <!--Requirements string 'nb2workflow[cwl,service,rdf,mmoda]>=1.3.30 
' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/Find_data.py'</command>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <environment_variables>
    <environment_variable name="BASEDIR">$__tool_directory__</environment_variable>
    <environment_variable name="GALAXY_TOOL_DIR">$__tool_directory__</environment_variable>
  </environment_variables>
  <inputs>
    <param name="src_name" type="text" value="1ES 1218+304" label="src_name" />
  </inputs>
  <outputs />
  <tests>
    <test expect_num_outputs="0">
      <param name="src_name" value="1ES 1218+304" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
</tool>