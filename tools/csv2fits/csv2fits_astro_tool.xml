<tool id="csv2fits_astro_tool" name="csv2fits" version="0.0.1+galaxy0" profile="24.0">
  <requirements>
    <requirement type="package" version="6.1.4">astropy</requirement>
    <requirement type="package" version="7.16.6">nbconvert</requirement>
    <requirement type="package" version="1.2.37">oda-api</requirement>
    <!--Requirements string 'nb2workflow>=1.3.30' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/astropy csv2fits.py'</command>
  <environment_variables>
    <environment_variable name="BASEDIR">$__tool_directory__</environment_variable>
    <environment_variable name="GALAXY_TOOL_DIR">$__tool_directory__</environment_variable>
  </environment_variables>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <param name="input_file" type="data" label="input_file" format="data" optional="false" />
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; astropy csv2fits catalog_table" name="out_astropy_csv2fits_catalog_table" format="auto" from_work_dir="catalog_table_galaxy.output" />
  </outputs>
  <tests>
    <test expect_num_outputs="1">
      <param name="input_file" location="https://www.astro.unige.ch/~tucci/Phosphoros/MultiBands_Catalog_1k.fits" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
</tool>