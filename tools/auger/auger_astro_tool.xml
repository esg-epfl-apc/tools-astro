<tool id="auger_astro_tool" name="Auger" version="0.0.1+galaxy0" profile="23.0">
  <requirements>
    <requirement type="package" version="8.31.0">ipython</requirement>
    <requirement type="package" version="7.0.0">astropy</requirement>
    <requirement type="package" version="3.10.0">matplotlib</requirement>
    <requirement type="package" version="0.4.7">astroquery</requirement>
    <requirement type="package" version="1.15.0">scipy</requirement>
    <requirement type="package" version="1.2.27">oda-api</requirement>
    <requirement type="package" version="1.6.1">zenodo_get</requirement>
    <requirement type="package" version="7.16.5">nbconvert</requirement>
    <!--Requirements string 'nb2workflow[service,rdf,mmoda]>=1.3.30 
' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">ipython '$__tool_directory__/Spectrum.py'</command>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <param name="src_name" type="text" value="Cen A" label="src_name" />
    <param name="RA" type="float" value="201.365063" label="RA (unit: deg)" />
    <param name="DEC" type="float" value="-43.019113" label="DEC (unit: deg)" />
    <param name="T1" type="text" value="2021-10-09T13:16:00.0" label="T1" />
    <param name="T2" type="text" value="2021-10-13T13:16:00.0" label="T2" />
    <param name="Source_region_radius" type="float" value="27.0" label="Source signal region radius (unit: deg)" />
    <param name="Emin" type="float" value="3.162e+19" label="Minimal energy (unit: eV)" />
    <param name="Emax" type="float" value="3.162e+20" label="Maximal energy (unit: eV)" />
    <param name="NEbins" type="integer" value="2" label="Number of energy bins" />
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; Spectrum picture_png" name="out_Spectrum_picture_png" format="auto" from_work_dir="picture_png_galaxy.output" />
    <data label="${tool.name} -&gt; Spectrum spectrum_astropy_table" name="out_Spectrum_spectrum_astropy_table" format="auto" from_work_dir="spectrum_astropy_table_galaxy.output" />
  </outputs>
  <tests>
    <test expect_num_outputs="2">
      <param name="src_name" value="Cen A" />
      <param name="RA" value="201.365063" />
      <param name="DEC" value="-43.019113" />
      <param name="T1" value="2021-10-09T13:16:00.0" />
      <param name="T2" value="2021-10-13T13:16:00.0" />
      <param name="Source_region_radius" value="27.0" />
      <param name="Emin" value="3.162e+19" />
      <param name="Emax" value="3.162e+20" />
      <param name="NEbins" value="2" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
  <environment_variables>
    <environment_variable name="BASEDIR">$__tool_directory__</environment_variable>
    <environment_variable name="GALAXY_TOOL_DIR">$__tool_directory__</environment_variable>
  </environment_variables>
</tool>