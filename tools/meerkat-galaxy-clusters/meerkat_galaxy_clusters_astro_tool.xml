<tool id="meerkat_galaxy_clusters_astro_tool" name="Meerkat Galaxy clusters" version="0.0.1+galaxy0" profile="23.0">
  <requirements>
    <requirement type="package" version="2.2.3">pandas</requirement>
    <requirement type="package" version="3.9.4">matplotlib</requirement>
    <requirement type="package" version="6.0.1">astropy</requirement>
    <requirement type="package" version="1.26.4">numpy</requirement>
    <requirement type="package" version="1.2.35">oda-api</requirement>
    <requirement type="package" version="1.11.0">photutils</requirement>
    <requirement type="package" version="1.35.98">boto3</requirement>
    <requirement type="package" version="7.16.5">nbconvert</requirement>
    <requirement type="package" version="2.32.3">requests</requirement>
    <!--Requirements string 'nb2workflow[cwl,service,rdf,mmoda]
' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/${_data_product._selector}.py'</command>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <conditional name="_data_product">
      <param name="_selector" type="select" label="Data Product">
        <option value="spectrum_around_source" selected="true">spectrum_around_source</option>
        <option value="pictures" selected="false">pictures</option>
      </param>
      <when value="spectrum_around_source">
        <param name="ra" type="float" value="260" label="ra (unit: deg)" />
        <param name="dec" type="float" value="-85" label="dec (unit: deg)" />
        <param name="thresh_arcmin" type="integer" value="5" label="thresh_arcmin" />
      </when>
      <when value="pictures" />
    </conditional>
  </inputs>
  <outputs />
  <tests>
    <test expect_num_outputs="0">
      <conditional name="_data_product">
        <param name="_selector" value="spectrum_around_source" />
        <param name="ra" value="260" />
        <param name="dec" value="-85" />
        <param name="thresh_arcmin" value="5" />
      </conditional>
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
    <test expect_num_outputs="0">
      <conditional name="_data_product">
        <param name="_selector" value="pictures" />
      </conditional>
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
  <environment_variables>
    <environment_variable name="BASEDIR">$__tool_directory__</environment_variable>
    <environment_variable name="GALAXY_TOOL_DIR">$__tool_directory__</environment_variable>
  </environment_variables>
</tool>