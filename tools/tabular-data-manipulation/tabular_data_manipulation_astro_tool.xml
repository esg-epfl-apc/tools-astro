<tool id="tabular_data_manipulation_astro_tool" name="Tabular Data Manipulation" version="0.0.1+galaxy0" profile="23.0">
  <requirements>
    <requirement type="package" version="2.2.2">pandas</requirement>
    <requirement type="package" version="8.26.0">ipython</requirement>
    <requirement type="package" version="1.2.21">oda-api</requirement>
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/compute_new_column.py'</command>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <param name="fn" type="data" label="fn" format="data" />
    <param name="new_column" type="text" value="sum" label="new_column" />
    <param name="expression" type="text" value="c1 + c2" label="expression" />
    <param name="sep" type="text" value="comma" label="sep" />
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; compute_new_column outputfile" name="out_compute_new_column_outputfile" format="auto" from_work_dir="outputfile_galaxy.output" />
  </outputs>
  <tests>
    <test expect_num_outputs="1">
      <param name="fn" location="https://gitlab.renkulab.io/astronomy/mmoda/tabular-data-manipulation/-/raw/ff6becb55920bec362a8b1357bd5da9d6adb1767/testfile.tsv" />
      <param name="new_column" value="sum" />
      <param name="expression" value="c1 + c2" />
      <param name="sep" value="comma" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
</tool>