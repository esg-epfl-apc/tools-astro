<tool id="spectral_analysis_astro_tool" name="spectral-analysis" version="0.0.1+galaxy0" profile="23.0">
  <requirements>
    <requirement type="package" version="1.2.12">oda-api</requirement>
    <requirement type="package" version="6.0.0">astropy</requirement>
    <requirement type="package" version="3.8.3">matplotlib</requirement>
    <!--Requirements string 'ogip' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/fit.py'</command>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <param name="spectrum" type="data" label="spectrum" />
    <param name="rmf" type="data" label="rmf" />
    <param name="arf" type="data" label="arf" />
    <param name="background" type="text" value="" label="background" />
    <param name="e_min" type="integer" value="25" label="e_min" />
    <param name="e_max" type="integer" value="100" label="e_max" />
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; fit fitpng" name="out_fit_fitpng" format="auto" from_work_dir="fitpng_galaxy.output" />
  </outputs>
  <tests>
    <test expect_num_outputs="1">
      <param name="spectrum" value="None" />
      <param name="rmf" value="None" />
      <param name="arf" value="None" />
      <param name="background" value="" />
      <param name="e_min" value="25" />
      <param name="e_max" value="100" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
</tool>