    <data label="${tool.name} -&gt; pre-defined_model event_list_fits" name="out_pre-defined_model_event_list_fits" format="auto" from_work_dir="event_list_fits_galaxy.output">
      <filter>_data_product['_selector'] == 'pre-defined_model'</filter>
