<tool id="integral_observed_astro_tool" name="integral-observed" version="0.0.1+galaxy0" profile="24.0">
  <requirements>
    <requirement type="package" version="9.2.0">ipython</requirement>
    <requirement type="package" version="7.0.1">astropy</requirement>
    <requirement type="package" version="3.10.1">matplotlib</requirement>
    <requirement type="package" version="1.2.27">oda-api</requirement>
    <requirement type="package" version="2.2.5">numpy</requirement>
    <requirement type="package" version="7.16.6">nbconvert</requirement>
    <requirement type="package" version="5.10.4">nbformat</requirement>
    <requirement type="package" version="0.3.3">gcn-kafka</requirement>
    <requirement type="package" version="0.14.2">xmltodict</requirement>
    <requirement type="package" version="0.11.0">hop-client</requirement>
    <requirement type="package" version="2.3.0">ligo.skymap</requirement>
    <requirement type="package" version="2.2.3">pandas</requirement>
    <requirement type="package" version="2.32.3">requests</requirement>
  </requirements>
  <command detect_errors="exit_code">python '$__tool_directory__/find-observations.py'</command>
  <environment_variables>
    <environment_variable name="BASEDIR">$__tool_directory__</environment_variable>
    <environment_variable name="GALAXY_TOOL_DIR">$__tool_directory__</environment_variable>
  </environment_variables>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <param name="source_list_url" type="text" value="https://renkulab.io/gitlab/astronomy/mmoda/integral-observed/-/raw/master/tlist.txt" label="source_list_url" optional="false" />
    <param name="days_margin" type="integer" value="3" label="days_margin" optional="false" />
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; find-observations observations_preview" name="out_find_observations_observations_preview" format="auto" from_work_dir="observations_preview_galaxy.output" />
    <data label="${tool.name} -&gt; find-observations log" name="out_find_observations_log" format="auto" from_work_dir="log_galaxy.output" />
    <data label="${tool.name} -&gt; find-observations observations" name="out_find_observations_observations" format="auto" from_work_dir="observations_galaxy.output" />
  </outputs>
  <tests>
    <test expect_num_outputs="3">
      <param name="source_list_url" value="https://renkulab.io/gitlab/astronomy/mmoda/integral-observed/-/raw/master/tlist.txt" />
      <param name="days_margin" value="3" />
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
</tool>